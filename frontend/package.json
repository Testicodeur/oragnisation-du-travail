{
  "name": "orgwork-frontend",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "export": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "electron-build-win": "npm run build && electron-builder --win",
    "electron-build-mac": "npm run build && electron-builder --mac",
    "electron-build-linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "next": "14.2.5",
    "next-themes": "0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "lucide-react": "0.468.0",
    "framer-motion": "11.3.28",
    "next-pwa": "^5.6.0"
  },
  "devDependencies": {
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.14",
    "typescript": "5.6.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "main": "electron/real-app.js",
  "homepage": "./",
  "build": {
    "appId": "com.orgwork.desktop",
    "productName": "Organisation du Travail",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "electron/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "electron/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icon.png"
    }
  }
}
